{
  "name": "engine",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/scripts/test/fixtures/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./examples/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable",
    "lint": "eslint . -f codeframe",
    "prestart": "yarn build",
    "start": "engineer start --featureDiscoveryRoot dist",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "lerna run test --stream --concurrency=1",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@file-services/memory": "^5.3.1",
    "@file-services/types": "^5.3.1",
    "@stylable/cli": "^4.3.3",
    "@stylable/core": "^4.3.3",
    "@stylable/webpack-plugin": "^4.3.3",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^3.0.1",
    "@ts-tools/webpack-loader": "^3.0.2",
    "@types/chai": "^4.2.19",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.10",
    "@types/d3-hierarchy": "^3.0.1",
    "@types/d3-selection": "^3.0.0",
    "@types/d3-shape": "^3.0.0",
    "@types/express": "^4.17.12",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/is-ci": "^3.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "14",
    "@types/react": "^17.0.12",
    "@types/react-dom": "^17.0.8",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.6",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "lerna": "^4.0.0",
    "mocha": "^9.0.1",
    "mocha-play": "^2.0.2",
    "playwright-chromium": "^1.12.3",
    "playwright-core": "^1.12.3",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-loader": "^3.0.0",
    "typescript": "~4.3.5",
    "util": "^0.12.4",
    "webpack": "^5.41.1"
  },
  "license": "MIT",
  "private": true
}
