{
  "name": "engine",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/scripts/test/fixtures/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./examples/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "yarn workspace @wixc3/engine-dashboard build:stylable",
    "lint": "eslint . -f codeframe",
    "start": "engine start",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "lerna run test --stream --concurrency=1",
    "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@file-services/memory": "^4.1.2",
    "@file-services/types": "^4.1.0",
    "@stylable/cli": "^3.11.2",
    "@stylable/core": "^3.11.2",
    "@stylable/webpack-plugin": "^3.11.2",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "12",
    "@types/puppeteer": "^3.0.2",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-select": "^3.0.22",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.34",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-middleware": "^3.7.2",
    "@types/webpack-sources": "^2.0.0",
    "@types/webpack-virtual-modules": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "lerna": "^3.22.1",
    "mocha": "^8.1.3",
    "mocha-pup": "^4.0.3",
    "promise-assist": "^1.3.0",
    "puppeteer": "^5.3.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0",
    "typescript": "~4.0.3",
    "webpack": "^4.44.2"
  },
  "license": "MIT",
  "private": true
}
