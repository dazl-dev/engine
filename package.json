{
  "name": "engine",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/scripts/test/fixtures/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./examples/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "yarn workspace @wixc3/engine-dashboard build:stylable",
    "lint": "eslint . -f codeframe",
    "start": "engineer start",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "lerna run test --stream --concurrency=1",
    "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@file-services/memory": "^5.2.0",
    "@file-services/types": "^5.2.0",
    "@stylable/cli": "^3.11.10",
    "@stylable/core": "^3.11.10",
    "@stylable/webpack-plugin": "^3.11.10",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "12",
    "@types/puppeteer": "^5.4.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.9",
    "@types/sinon-chai": "^3.2.5",
    "@types/webpack": "^4.41.25",
    "@types/webpack-dev-middleware": "^3.7.2",
    "@types/webpack-sources": "^2.1.0",
    "@types/webpack-virtual-modules": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "lerna": "^3.22.1",
    "mocha": "^8.2.1",
    "mocha-pup": "^5.1.2",
    "promise-assist": "^1.3.0",
    "puppeteer": "^5.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "source-map-loader": "^1.1.3",
    "typescript": "~4.1.3",
    "webpack": "^4.44.2"
  },
  "license": "MIT",
  "private": true
}
