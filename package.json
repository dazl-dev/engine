{
  "name": "engine",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/scripts/test/fixtures/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts,.tsx -f codeframe ",
    "start": "engine start",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "lerna run test --stream --concurrency=1",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
  },
  "devDependencies": {
    "@file-services/memory": "^2.1.1",
    "@stylable/cli": "^3.3.0",
