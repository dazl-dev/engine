{
  "name": "engine",
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages/scripts/test/fixtures/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist ./examples/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "yarn workspace @wixc3/engine-dashboard build:stylable",
    "lint": "eslint . -f codeframe",
    "start": "engineer start",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "lerna run test --stream --concurrency=1",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@file-services/memory": "^5.3.1",
    "@file-services/types": "^5.3.1",
    "@stylable/cli": "^4.0.1",
    "@stylable/core": "^4.0.1",
    "@stylable/webpack-plugin": "^4.0.1",
    "@ts-tools/build": "^2.1.1",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/cors": "^2.8.10",
    "@types/d3-hierarchy": "^2.0.0",
    "@types/d3-selection": "^2.0.0",
    "@types/d3-shape": "^2.0.0",
    "@types/express": "^4.17.11",
    "@types/html-minifier-terser": "^5.1.1",
    "@types/is-ci": "^3.0.0",
    "@types/mocha": "^8.2.1",
    "@types/node": "12",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.4",
    "@types/sinon": "^9.0.11",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "chai": "^4.3.3",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "lerna": "^4.0.0",
    "mocha": "^8.3.1",
    "mocha-play": "^1.0.1",
    "playwright-chromium": "^1.9.1",
    "playwright-core": "^1.9.1",
    "promise-assist": "^1.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "source-map-loader": "^2.0.1",
    "typescript": "~4.2.3",
    "util": "^0.12.3",
    "webpack": "^5.24.4"
  },
  "license": "MIT",
